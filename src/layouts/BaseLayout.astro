---
/**
 * BaseLayout.astro ÃƒÂ¢Ã‚Â€Ã‚Â” Master page wrapper
 * Version: 2.0
 * 
 * CHANGES FROM v1.0:
 *   - Header: dark glassmorphism (was white + border)
 *   - Nav CTA: miniature steel chrome bar (was flat green btn--phone)
 *   - Utility bar: simplified to "24/7 Live Answering"
 *   - Footer: teal accent (was orange)
 *   - Logo: icon + "247" + "Local Trades" layout
 *   - chrome-glint class on nav CTA for page-wide glint participation
 */

interface Props {
  title: string;
  description: string;
  canonical?: string;
  noindex?: boolean;
  schema?: object;
}

const { title, description, canonical, noindex = false, schema } = Astro.props;
const siteUrl = 'https://247localtrades.com';
const canonicalUrl = canonical || new URL(Astro.url.pathname, siteUrl).href;
import '../styles/global.css';
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <meta name="description" content={description}>
  <link rel="canonical" href={canonicalUrl}>
  {noindex
    ? <meta name="robots" content="noindex, nofollow">
    : <meta name="robots" content="index, follow">
  }
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=DM+Sans:opsz,wght@9..40,400;9..40,500;9..40,600;9..40,700;9..40,800&display=swap" rel="stylesheet">
  <script defer data-domain="247localtrades.com" src="https://plausible.io/js/script.js"></script>
  {schema && <script type="application/ld+json" set:html={JSON.stringify(schema)} />}
  <meta property="og:title" content={title}>
  <meta property="og:description" content={description}>
  <meta property="og:type" content="website">
  <meta property="og:url" content={canonicalUrl}>
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
</head>
<body>

  <!-- Utility bar -->
  <div class="utility-header" style="white-space:nowrap;text-align:center;">
    <div class="container">
Licensed &amp; Insured <img src="/icon.svg" alt="" aria-hidden="true" style="width:12px;height:12px;margin:0 10px;vertical-align:middle;display:inline;opacity:0.7;"> Serving Northwest Florida <img src="/icon.svg" alt="" aria-hidden="true" style="width:12px;height:12px;margin:0 10px;vertical-align:middle;display:inline;opacity:0.7;"> Available 24/7
    </div>
  </div>

  <!-- Site header â€“ dark glassmorphism -->
  <header class="site-header">
    <div class="site-header__inner">
      <a href="/" class="site-header__logo">
        <div style="display:flex;align-items:center;gap:12px;">
          <svg width="50" height="50" viewBox="0 0 50 50" style="flex-shrink:0;" aria-hidden="true">
            <circle cx="25" cy="25" r="22" fill="none" stroke="#5a6478" stroke-width="3"/>
            <circle cx="25" cy="25" r="16.5" fill="none" stroke="#63D0CA" stroke-width="4.5" stroke-dasharray="93 12" stroke-dashoffset="-3" stroke-linecap="round"/>
            <text x="25" y="31" text-anchor="middle" font-family="system-ui,sans-serif" font-weight="800" font-size="15" fill="#ffffff" letter-spacing="-0.5">LT</text>
            <circle cx="25" cy="44" r="2.5" fill="#c8d6e8"/>
          </svg>
          <div style="display:flex;flex-direction:column;gap:0;line-height:1;">
            <div style="display:flex;align-items:baseline;gap:5px;">
              <span style="font-size:22px;font-weight:800;color:#ffffff;letter-spacing:-0.5px;line-height:1;">247</span>
              <span style="font-size:22px;font-weight:500;color:#73B0DC;letter-spacing:-0.2px;line-height:1;">Local Trades</span>
            </div>
            <div style="height:1px;background:rgba(99,208,202,0.3);margin:3px 0 4px;"></div>
            <span style="font-size:10px;font-weight:600;color:#ffffff;letter-spacing:0.1em;line-height:1;text-transform:uppercase;">We&apos;ve got your neighborhood covered.</span>
          </div>
        </div>
      </a>
      <nav class="site-header__nav">
        <a href="/service/">Request Service</a>
        <a href="/vendors/">For Contractors</a>
        <a href="/about/">About</a>
        <a href="tel:+18504039797" class="nav-cta chrome-glint">
          <span class="nav-glint"></span>
          <span class="nav-text">ðŸ“ž (850) 403-9797</span>
        </a>
      </nav>
    </div>
  </header>

  <main><slot /></main>

  <!-- Footer -->
  <footer class="site-footer">
    <div class="container">
      <div class="site-footer__grid">
        <div>
          <div class="site-footer__brand">247<span class="teal">Local</span>Trades</div>
          <p>We've got your neighborhood covered. Verified local HVAC contractors in Northwest Florida.</p>
          <p style="margin-top:var(--space-md)">
            <a href="tel:+18504039797" class="nav-cta chrome-glint"><span class="nav-glint"></span><span class="nav-text">ðŸ“ž (850) 403-9797</span></a>
          </p>
        </div>
        <div>
          <h4>Services</h4>
          <ul>
            <li><a href="/florida/pensacola/hvac/">HVAC Repair</a></li>
            <li><a href="/service/">Request Service</a></li>
            <li><a href="/florida/">Service Areas</a></li>
          </ul>
        </div>
        <div>
          <h4>Company</h4>
          <ul>
            <li><a href="/about/">About Us</a></li>
            <li><a href="/vendors/">For Contractors</a></li>
            <li><a href="/privacy/">Privacy Policy</a></li>
            <li><a href="/terms/">Terms of Service</a></li>
          </ul>
        </div>
      </div>
      <div class="site-footer__legal">
        <span>&copy; {new Date().getFullYear()} 247 Local Trades. All rights reserved.</span>
        <span>Calls may be recorded for training and quality assurance.</span>
      </div>
    </div>
  </footer>

  <!-- Mobile sticky phone bar -->
  <div class="sticky-phone">
    <a href="tel:+18504039797">ðŸ“ž Call Now â€” (850) 403-9797</a>
  </div>


  <style is:global>@import '../styles/global.css';
  /* nav-cta text: white default, gold on hover */
  .nav-cta { color: #ffffff !important; white-space: nowrap !important; }
  .nav-cta .nav-text { color: inherit; }
.nav-cta:hover { color: #fce88a; transition: color 0.2s ease; }
  /* header height with tagline */
  .site-header__inner { height: 68px; }
  /* mobile: hide utility bar, shrink logo */
  @media (max-width: 768px) {
    .utility-header { display: none; }
    .site-header__logo svg { height: 34px; }
    .site-header__inner { height: 56px; }
  }
</style>
</body>
</html>