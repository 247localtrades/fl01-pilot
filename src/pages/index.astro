---
import BaseLayout from '../layouts/BaseLayout.astro';
import PhoneCTA from '../components/PhoneCTA.astro';
import ServiceChecker from '../components/ServiceChecker.astro';

const schema = {
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "247 Local Trades",
  "url": "https://247localtrades.com",
  "telephone": "+1-850-403-9797",
  "areaServed": { "@type": "State", "name": "Florida" },
  "description": "Connecting homeowners with verified local HVAC contractors in Northwest Florida."
};
